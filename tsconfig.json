{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],            // âœ… Add this line
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts", "src/types/**/*.d.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "files": true
  }
}
